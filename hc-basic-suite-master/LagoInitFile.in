domains:
  lago-{{ env.suite_name }}-engine:
    vm-provider: ssh
    vm-type: default
    ssh-password: 123456
    distro: el8
    service_provider: systemd
    nics:
      - net: lago-{{ env.suite_name}}-net-management
        ip: 192.168.200.99
    metadata:
      ovirt-engine-password: 123
    artifacts:
      - /var/log

{%- for i in range(hostCount) %}
  lago-{{ env.suite_name }}-host-{{ i }}:
    vm-type: default
    distro: el8
    memory: 5120
    nics:
      - net: lago-{{ env.suite_name}}-net-management
    disks:
      - template_name: {{ templates.host }}
        type: template
        name: root
        dev: vda
        format: qcow2
      - comment: Used for brick
        name: brick
        size: 170G
        type: empty
        dev: sda
        format: qcow2
      - comment: Used for cache
        name: cache
        size: 100G
        type: empty
        dev: sdb
        format: qcow2
      {% if loop.first -%}
      - name: tmp
        size: 100G
        type: empty
        dev: sdc
        format: qcow2
      {%- endif %}
    metadata:
      ovirt-capabilities:
        - snapshot-live-merge
      deploy-scripts:
        - $OST_REPO_ROOT/common/deploy-scripts/dnf_upgrade.sh
        - $OST_REPO_ROOT/common/deploy-scripts/setup_host_el7.sh
        - $SUITE/hc_setup_host.sh
        {% if loop.first -%}
        - $SUITE/setup_first_host.sh
        {%- endif %}
    artifacts:
      - /var/log
{%- endfor %}

nets:
  lago-{{ env.suite_name}}-net-management:
    type: nat
    dhcp:
      start: 100
      end: 254
    management: true
    dns_domain_name: lago.local
